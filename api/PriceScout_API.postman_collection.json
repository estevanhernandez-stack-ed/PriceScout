{
  "info": {
    "name": "PriceScout API",
    "_postman_id": "pricescout-api-collection",
    "description": "Complete API collection for PriceScout theater showtime and pricing data. All endpoints require API key authentication (except /healthz).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "0.2.0"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{apiKey}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "YOUR_API_KEY_HERE",
      "type": "string",
      "description": "Your PriceScout API key - get one with: python manage_api_keys.py generate --client 'Your Name' --tier free"
    }
  ],
