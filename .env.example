# ==============================================================================
# Price Scout - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment Settings
# ------------------------------------------------------------------------------
# Options: development, staging, production
ENVIRONMENT=production

# Enable debug mode for detailed logging and screenshots
# Options: true, false
DEBUG_MODE=false

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Path to the main database file (relative to project root)
DB_PATH=./data/price_scout.db

# User authentication database
USER_DB_PATH=./users.db

# ------------------------------------------------------------------------------
# API Keys
# ------------------------------------------------------------------------------
# OMDb API Key - Get yours at: https://www.omdbapi.com/apikey.aspx
# Free tier: 1,000 daily requests
OMDB_API_KEY=your_api_key_here

# ------------------------------------------------------------------------------
# Cache Settings
# ------------------------------------------------------------------------------
# Number of days before theater cache expires
CACHE_EXPIRATION_DAYS=7

# Theater cache file path
CACHE_FILE=./app/theater_cache.json

# ------------------------------------------------------------------------------
# Scraping Configuration
# ------------------------------------------------------------------------------
# Timeout for page loads (seconds)
SCRAPE_TIMEOUT=30

# Headless mode for browser scraping
# Options: true (no browser window), false (visible browser)
SCRAPE_HEADLESS=true

# Enable debug screenshots on scraping failures
# Screenshots saved to: debug_snapshots/
CAPTURE_DEBUG_SCREENSHOTS=true

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Secret key for session management (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_a_random_secret_key_here_using_command_above

# Session timeout (seconds) - default: 1800 = 30 minutes
SESSION_TIMEOUT=1800

# Maximum login attempts before lockout - default: 5
MAX_LOGIN_ATTEMPTS=5

# Login lockout duration (seconds) - default: 900 = 15 minutes
LOGIN_LOCKOUT_DURATION=900

# Minimum password length - default: 8
MIN_PASSWORD_LENGTH=8

# Require password complexity (uppercase, lowercase, number, special char)
REQUIRE_PASSWORD_COMPLEXITY=true

# Maximum file upload size (MB) - default: 50
MAX_FILE_SIZE_MB=50

# Enable security event logging
ENABLE_SECURITY_LOGGING=true

# Security log file path
SECURITY_LOG_FILE=security_events.log

# Force HTTPS in production (nginx handles this, but good to document)
FORCE_HTTPS=true

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
# Application title
APP_TITLE=Price Scout

# Default theme
# Options: dark, light
DEFAULT_THEME=dark

# ------------------------------------------------------------------------------
# Deployment Configuration
# ------------------------------------------------------------------------------
# Domain name for production deployment
DOMAIN_NAME=pricescout.example.com

# SSL certificate paths (if using custom certificates, not Let's Encrypt)
# SSL_CERT_PATH=/etc/letsencrypt/live/pricescout.example.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/pricescout.example.com/privkey.pem

# Server bind address (use 0.0.0.0 for remote access, 127.0.0.1 for local only)
SERVER_ADDRESS=0.0.0.0

# Server port
SERVER_PORT=8501

# ------------------------------------------------------------------------------
# Reports Configuration
# ------------------------------------------------------------------------------
# Directory for generated reports
REPORTS_DIR=./data/reports

# Export format preferences
# Options: csv, excel, both
DEFAULT_EXPORT_FORMAT=excel

# ------------------------------------------------------------------------------
# Development Settings (Only for ENVIRONMENT=development)
# ------------------------------------------------------------------------------
# Enable auto-reload
DEV_AUTO_RELOAD=true

# Show detailed error messages
DEV_SHOW_ERRORS=true

# Enable profiling
DEV_ENABLE_PROFILING=false

# ------------------------------------------------------------------------------
# Streamlit Configuration
# ------------------------------------------------------------------------------
# Port to run Streamlit on
STREAMLIT_PORT=8501

# Enable/disable server file watcher
STREAMLIT_FILE_WATCHER=true

# Enable/disable dark theme
STREAMLIT_THEME_BASE=dark

# ------------------------------------------------------------------------------
# Testing Configuration (Only for tests)
# ------------------------------------------------------------------------------
# Use in-memory database for tests
TEST_USE_MEMORY_DB=true

# Test timeout (seconds)
TEST_TIMEOUT=30

